	private List<Vertex<V>> list;

	private class Vertex<D extends Comparable<D>> implements Comparable<Vertex<D>>, Iterable<D> {
		private Map<D, Integer> map;
		private D vertex;
		private boolean done;
		private boolean active;

		// Constructor for a vertex with data vert.
		private Vertex(D vert) {
			map = new Map<D, Integer>();
			vertex = vert;
			done = false;
			active = false;
		}

		// Comparing vertices is based on the data in the vertex.
		public int compareTo(Vertex<D> o) {
			return vertex.compareTo(o.vertex);
		}

		// Returns iterator for the edges of a vertex, stored in map.
		public Iterator<D> iterator() {

			return map.new MapIterator<D>();
		}
	}

